<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/recipe_img_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/recipe_image"
            android:scaleType="centerCrop"
            android:transitionName="@string/recipe_image" />

        <TextView
            android:id="@+id/recipe_title_txt_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/black_semi_transparent"
            android:drawableRight="@drawable/ic_keyboard_arrow_right_white_24dp"
            android:padding="@dimen/spacing_medium"
            android:textColor="@android:color/white"
            android:textSize="@dimen/reciep_text_size"
            android:textStyle="bold"
            android:transitionName="@string/title" />
    </RelativeLayout>

</android.support.v7.widget.CardView>